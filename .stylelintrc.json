{
  "extends": "stylelint-config-standard",
  "rules": {
    "no-empty-source": null,
    "declaration-block-single-line-max-declarations": 50,
    "comment-whitespace-inside": null,
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "extend",
          "at-root",
          "debug",
          "warn",
          "error",
          "if",
          "else",
          "for",
          "each",
          "while",
          "mixin",
          "include",
          "content",
          "return",
          "function",
          "tailwind",
          "apply",
          "responsive",
          "variants",
          "screen"

        ]
      }
    ]
  }
}